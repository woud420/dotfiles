# GPU configuration for AMD RX 5700 XT
exec_always "systemctl --user set-environment WLR_DRM_DEVICES=/dev/dri/card1"
exec_always "systemctl --user set-environment AMD_VULKAN_ICD=RADV"
exec_always "systemctl --user set-environment RADV_PERFTEST=gpl"
exec_always "systemctl --user set-environment VK_ICD_FILENAMES=/usr/share/vulkan/icd.d/radeon_icd.x86_64.json"

# XWayland configuration for GPU access
xwayland enable

# Autostart
exec "systemctl --user import-environment"
exec xremap --wayland
exec mako
exec_always ~/.config/waybar/waybar.sh
exec wl-paste --watch cliphist store

